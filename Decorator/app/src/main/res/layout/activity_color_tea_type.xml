<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alexander.decorator.ColorTeaTypeActivity"
    android:background="@drawable/tea">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Выберите чай на свой вкус"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:id="@+id/radioGroupForTea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true">

        <RadioButton
            android:id="@+id/radioBlackTea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radioBlackTea"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioGreenTea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/green_tea"
            android:checked="false" />

        <RadioButton
            android:id="@+id/radioYellowTea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yellow_tea"
            android:checked="false" />

        <RadioButton
            android:id="@+id/radioFruitTea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fruit_tea"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/portionCostForTeaColor"
        android:layout_gravity="center_horizontal"
        android:text="30 рублей"
        android:layout_above="@+id/buttonNextFromColorTeaTypeActivity"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбрать ингредиенты"
        android:id="@+id/buttonNextFromColorTeaTypeActivity"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />
</RelativeLayout>
