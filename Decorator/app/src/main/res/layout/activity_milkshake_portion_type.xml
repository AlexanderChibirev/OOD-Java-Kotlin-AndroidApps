<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alexander.decorator.MilkshakePortionTypeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Порция:"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:id="@+id/radioGroupForThreePortion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true">

        <RadioButton
            android:id="@+id/radioLittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Маленькая"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Средняя"
            android:checked="false" />

        <RadioButton
            android:id="@+id/radioBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Большая"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/portionCostForMilkShake"
        android:layout_gravity="center_horizontal"
        android:text="50 рублей"
        android:layout_below="@+id/radioGroupForThreePortion"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбрать ингридиенты"
        android:id="@+id/buttonNextFromMilkshakeActivity"
        android:layout_below="@+id/portionCostForMilkShake"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
