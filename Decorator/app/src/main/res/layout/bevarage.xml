<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Выберите напиток"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="напитки:"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кофе"
        android:id="@+id/buttonCoffee"
        android:layout_marginTop="26dp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Чай"
        android:id="@+id/buttonTea"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_below="@+id/spinnerCoffee"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Молочный коктейль"
        android:id="@+id/buttonMilk"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_below="@+id/buttonTea1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дальше"
        android:id="@+id/buttonNext"
        android:layout_below="@+id/buttonMilk1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>