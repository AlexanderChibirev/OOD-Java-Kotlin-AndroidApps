<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ChocolatePiecesActivity"
    android:background="@drawable/choc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Шоколад"
        android:id="@+id/textView5" />

    <RadioGroup
        android:id="@+id/radioGroupChocolatePieces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/radioPart1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 кусочек"
            android:checked="true" />
        <RadioButton
            android:id="@+id/radioPart2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 кусочка"
            android:checked="false" />
        <RadioButton
            android:id="@+id/radioPart3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 кусочка"
            android:checked="false" />
        <RadioButton
            android:id="@+id/radioPart4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 кусочка"
            android:checked="false" />
        <RadioButton
            android:id="@+id/radioPart5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 кусочков"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewCostChocolatePieces"
            android:layout_gravity="center_horizontal"
            android:text="1 рубль"
            android:layout_below="@+id/radioGroupChocolatePieces"
            android:layout_alignRight="@+id/buttonAdder"
            android:layout_alignEnd="@+id/buttonAdder" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить"
        android:id="@+id/buttonAdder"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
