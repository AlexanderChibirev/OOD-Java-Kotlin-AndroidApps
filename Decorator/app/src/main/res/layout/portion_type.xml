<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Порция:"
        android:id="@+id/textView8" />

    <RadioGroup
        android:id="@+id/radioGroupForTwoPortion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp" >

        <RadioButton
            android:id="@+id/radioStandard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Стандартная"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioDouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Двойная"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:id="@+id/portionCost" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбрать ингридиенты"
        android:id="@+id/buttonNextFromPortiontypeActivity" />

</LinearLayout>