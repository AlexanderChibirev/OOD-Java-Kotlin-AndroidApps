<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:dialogTitle="@string/select_language_title"
        android:entries="@array/languages"
        android:entryValues="@array/locales"
        android:key="@string/preferences_language_key"
        android:summary="@string/preferences_language_summary"
        android:title="@string/preferences_language_title" />

    <EditTextPreference
        android:dialogTitle="@string/preferences_address_rrs_flow_dialog_title"
        android:inputType="textCapSentences|textAutoCorrect"
        android:key="@string/preference_address_rrs_key"
        android:summary="@string/preferences_address_rrs_flow_summary"
        android:title="@string/preferences_address_rrs_flow_title" />
</PreferenceScreen>