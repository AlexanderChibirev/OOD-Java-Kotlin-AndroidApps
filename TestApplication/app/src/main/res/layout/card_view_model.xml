<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="226dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        card_view:cardCornerRadius="@dimen/card_album_radius"
        android:layout_weight="0.97">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="219dp">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/rss_news_title_padding"
                android:paddingRight="@dimen/rss_news_title_padding"
                android:paddingTop="@dimen/rss_news_title_padding"
                android:textColor="@color/news_title"
                tools:text="Name"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="168dp"
                android:layout_marginStart="168dp" />

            <TextView
                android:id="@+id/item_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/tile_count_padding_bottom"
                android:paddingLeft="@dimen/rss_news_title_padding"
                android:paddingRight="@dimen/rss_news_title_padding"
                android:layout_below="@+id/item_title"
                android:layout_alignLeft="@+id/item_title"
                android:layout_alignStart="@+id/item_title"
                android:layout_alignBottom="@+id/item_thumbnail" />

            <ImageView
                android:id="@+id/item_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/backdrop_bg_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/item_detail"
                android:layout_toStartOf="@+id/item_detail"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/backdrop_subtitle" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>